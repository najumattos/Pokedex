@model IEnumerable<Pokedex.Models.Tipo>

@{
    ViewData["Title"] = "Index";
     ViewData["Sidebar"] = "Tipo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Tipo</h1>
<h4>Lista</h4>

<p>
    <a class="btn btn-danger px-5" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Adicionar
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
              <a class="text-decoration-none text-warning" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="bi bi-pencil-fill" title="Alterar"></i>
                </a> |
                <a class="text-decoration-none" asp-action="Details" asp-route-id="@item.Id">
                    <i class="bi bi-search" title="Detalhes"></i>
                </a> |
                <a class="text-decoration-none text-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="bi bi-trash3-fill" title="Excluir"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
